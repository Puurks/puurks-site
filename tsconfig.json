{
    "include": [
        "next-env.d.ts", 
        ".next/types/**/*.ts", 
        "**/*.ts", "**/*.tsx"
    ],
    "exclude": [
        "node_modules"
    ],
    "compilerOptions": {
        "incremental": true,
        "strict": true,
        "target": "ES2017",
        "allowJs": true,
        "skipLibCheck": true,
        "noEmit": true,
        "lib": ["DOM", "DOM.Iterable", "esnext"],
        "plugins": [
            {
                "name": "next"
            }
        ],
        "module": "esnext",
        "esModuleInterop": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve"
    },
}